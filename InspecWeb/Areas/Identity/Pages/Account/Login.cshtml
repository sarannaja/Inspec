@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container h-100">
    <div class="row h-100">
        <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
            <div class="d-table-cell align-middle">

                <div class="text-center mt-4">          
                    <p style="font-size:16px;">ระบบตรวจราชการอิเล็กทรอนิกส์</p>            
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="m-sm-4">
                            <div class="text-center">
                                <img src="~/img/logo.png"
                                     class="img-fluid rounded-circle" width="132" height="132" />
                            </div>
                            <form method="post">
                                <div class="form-group">
                                    <label></label>
                                    <input asp-for="Input.Username" class="form-control form-control-lg" placeholder="กรอกชื่อผู้ใช้" />
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label></label>
                                    <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="กรอกรหัสผ่าน" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    <small>
                                        @*<a href="javascript:void(0)">Forgot password?</a>*@
                                    </small>
                                </div>
                                <div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-center mt-3">
                                    <button type="submit" class="btn btn-lg btn-primary" style="color: white;">เข้าสู่ระบบ</button>
                                    @*<button type="submit" class="btn btn-lg btn-primary">Sign in</button>*@

                                </div>
                                @Html.ValidationSummary(false, string.Empty, new { @class = "text-danger" })

                                <div class="text-center mt-1">
                                    <a href="/training/external/register">สมัครผู้ร่วมอบรม(สำหรับบุคคลภายนอก)</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
